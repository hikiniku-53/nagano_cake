<div class="container">
  
  <div class="mx-5 my-4">
    <h4 class="bg-light d-inline px-4">
      注文履歴一覧
    </h4>
  </div>

  <row>
    <table class="table table-bordered">
      <thead class="table-secondary">
        <tr>
          <td class="col-1">注文日</td>
          <td class="col-4">配送先</td>
          <td class="col-2">注文商品</td>
          <td class="col-1">支払金額</td>
          <td class="col-1">ステータス</td>
          <td class="col-1">注文詳細</td>
        </tr>
      </thead>

      <% @orders.each do |order| %>

        <tbody class="table-sm">
          <tr>
            <td class="align-middle">
              <%= order.created_at.strftime("%Y/%m/%d") %>
            </td>

            <td class="align-middle">
              <%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>

            <td class="align-middle">
              <% order.order_details.each do |order_detail| %>
                ・<%= order_detail.item.name %><br>
              <% end %>
            </td>

            <td class="align-middle">
              <%= p order.total_payment.to_s(:delimited) %>円
            </td>

            <td class="align-middle">
              <%= order.status_i18n %>
            </td>

            <td class="align-middle text-center">
              <%= link_to "表示する", order_path(order.id), class: 'btn btn-primary ' %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </row>
</div>

</div>