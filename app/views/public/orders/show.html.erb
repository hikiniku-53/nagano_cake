<div class="container">
  <h1>注文履歴詳細</h1>
  <div class="row">
    <div>
      <div>注文情報</div>
      <table class="table">
        <tbody>
          <tr>
            <th>注文日</th>
            <td>
              <%= @order.created_at.strftime("%Y/%m/%d") %>
            </td>
          </tr>

          <tr>
            <th>配送先</th>
            <td>
              <%= @order.address_display %>
            </td>
          </tr>

          <tr>
            <th>支払方法</th>
            <td>
              <%= @order.payment_method_i18n %>
            </td>
          </tr>

          <tr>
            <th>ステータス</th>
            <td>
              <%= @order.status_i18n %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div>
      <div>請求情報</div>
      <table class="table">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td>
              <%= p (@order.total_payment - @order.shipping_cost).to_s(:delimited) %>
            </td>
          </tr>

          <tr>
            <th>配送料</th>
            <td>
              <%= p @order.shipping_cost.to_s(:delimited) %>
            </td>
          </tr>

          <tr>
            <th>ご請求額</th>
            <td>
              <%= p @order.total_payment.to_s(:delimited) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div>
      <div>注文内容</div>
      <table class="table">
        <tbody>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>

          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= order_detail.item.name %>
              </td>

              <td>
                <%= p order_detail.price.to_s(:delimited) %>
              </td>

              <td>
                <%= order_detail.amount %>
              </td>

              <td>
                <%= p order_detail.subtotal.to_s(:delimited) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>