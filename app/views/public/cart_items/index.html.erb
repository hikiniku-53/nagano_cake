<div class="container">

  <div class="row justify-content-between">
    <h2>ショッピングカート</h2>

    <div>
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>


  <div class="row">


      <table class="table">

      <tbody>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>

        <% @cart_items.each do |cart_item| %>

        <tr>
          <td>
            <%= image_tag cart_item.item.get_image(100,100) %>
            <%= cart_item.item.name %>
          </td>

          <td>
            <%= p cart_item.item.add_tax_price.to_s(:delimited) %>
          </td>

          <td>
            <div class="form">
              <%= form_with model: cart_item ,url: cart_item_path(cart_item.id), method: :patch do |f| %>

                <%= f.select :amount, *[1..10] %>

                <%= f.submit '変更', class: 'btn  btn-success' %>

              <% end %>
            </div>
          </td>

          <td>
           <%= p cart_item.subtotal.to_s(:delimited) %>
          </td>
          <% @total_price += cart_item.subtotal %>
          <td>
           <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: 'btn btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

      <div class="d-flex justify-content-between">
        <%= link_to "買い物を続ける", items_path, class: 'btn  btn-primary' %>

        <table>
          <tbody>
            <tr>
              <th>合計金額</th>
              <td>
                <%= p @total_price.to_s(:delimited) %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

    <div class="d-flex">
      <%= link_to "情報入力に進む", new_order_path, class: 'btn  btn-success' %>
    </div>


  </div>
</div>