<div class="container">
  <div class="m-3">
    <h4>新規会員登録</h4>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

   <table class="table">

      <tbody>
        <tr>
          <th>名前</th>
          <td>(姓)</td>
          <td>
            <div class="field">
              <%= f.text_field :last_name, autofocus: true %>
            </div>
          </td>
          <td>(名)</td>
          <td>
            <div class="field">
              <%= f.text_field :first_name, autofocus: true %>
            </div>
          </td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td>(セイ)</td>
          <td>
            <div class="field">
              <%= f.text_field :last_name_kana, autofocus: true %></td>
            </div>
          <td>(メイ)</td>
          <td>
            <div class="field">
              <%= f.text_field :first_name_kana, autofocus: true %>
            </div>
          </td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td></td>
          <td>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </td>
        </tr>

        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td></td>
            <td>
             <div class="field">
              <%= f.text_field :postal_code, autofocus: true%>
            </div>
          </td>
        </tr>

        <tr>
          <th>住所</th>
          <td></td>
          <td>
              <div class="field">
              <%= f.text_field :address, autofocus: true%>
            </div>
          </td>
        </tr>

        <tr>
          <th>電話番号(ハイフンなし)</th>
          <td></td>
          <td>
            <div class="field">
              <%= f.text_field :telephone_number, autofocus: true%>
            </div>
          </td>
        </tr>

        <tr>
          <th>パスワード(6文字以上)</th>
          <td></td>
          <td>
            <div class="field">
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </td>
        </tr>

        <tr>
          <th>パスワード(確認用)</th>
          <td></td>
          <td>
            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>


    <div class="actions">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>

  <div>
    <h4>
      既に登録済みの方
    </h4>

    <%= link_to "こちら", new_customer_session_path, class: 'text-decoration-underline' %>
    &nbsp;からログインしてください。
  </div>
</div>