<div class="row d-flex">
  <% items.each do |item| %>
    <div class="item col-3" style="height: 200px">
      <%= link_to item_path(item.id), class: 'text-decoration-none' do %>
        <div class="text-center">
          <%= image_tag item.get_image(200,100) %>
        </div>
        <div class="text-dark d-inline-block h-25 ">
          <%= item.name %>
        </div>
        <div class="text-dark">
          ï¿¥<%= p item.price.to_s(:delimited) %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>