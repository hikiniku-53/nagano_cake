<div class="container d-flex">

  <%= render 'public/items/genre_search' %>

    <div class="col-lg-9">

      <row>
        <div class="jumbotron">
          <div class="container">
            <h4>
              ようこそ、ながのCAKEへ！<br>
              このサイトは、ケーキ販売のECサイトになります。<br>
              会員でない方も商品の閲覧はできますが、<br>
              購入には会員登録が必要になります。
            </h4>
          </div>
        </div>
      </row>

      <row>
         <div>

    <div class="d-flex">
      <h2>新着商品</h2>
    </div>

    <div class="row d-flex">
      <% @items.each do |item| %>

      <div class="item col-3">

        <%= link_to item_path(item.id) do %>

        <div class="item-image">
          <%= image_tag item.get_image(100,100) %>
        </div>

        <div class="item-name">
          <%= item.name %>
        </div>

        <div class="item-price">
          <%= p item.price.to_s(:delimited) %>
        </div>

        <% end %>

      </div>

      <% end %>
    </div>

  </div>
      </row>

      <row>
        <%= link_to items_path do %>
          <p class="text-right">全ての商品を見る ＞</p>
        <% end %>
      </row>

    </div>

</div>