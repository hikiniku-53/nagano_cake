<div class="container">
  <row>
    <div class="col-11 mx-auto">
      <div class="my-4">
        <h4 class="bg-light d-inline px-4">
          会員一覧
        </h4>
      </div>

      <table class="table border-bottom col-10 mx-auto">
        <thead>
          <tr class="table-secondary">
            <th class="col-2">会員ID</th>

            <th class="col-3">氏名</th>

            <th class="col-4">メールアドレス</th>

            <th class="col-3">ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>

            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %>
                <%= customer.first_name %>
              <% end %>
            </td>

            <td>
              <%= customer.email %>
            </td>

            <td>
              <% if customer.is_deleted == false %>
                <p class="text-success"><strong>有効</strong></p>
              <% else %>
                <p class="text-secondary"><strong>退会</strong></p>
              <% end%>
            </td>
          </tr>

        <% end %>

      </tbody>

    </table>
    <div><%= paginate @customers %></div>
  </div>
</div>