<div class="container">

  <div class="row">
    <div class="d-flex">
      <h2>会員一覧</h2>
    </div>

  </div>


  <div class="row">
    <table class="table">

      <tbody>

        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          <th></th>
        </tr>

        <% @customers.each do |customer| %>

          <tr>
            <td>
              <%= customer.id %>
            </td>

            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %>
                <%= customer.first_name %>
              <% end %>
            </td>

            <td>
              <%= customer.email %>
            </td>

            <td>
              <% if customer.is_deleted == false %>
                <p class="text-success"><strong>有効</strong></p>
              <% else %>
                <p class="text-secondary"><strong>退会</strong></p>
              <% end%>
            </td>

            <td></td>
          </tr>

        <% end %>

      </tbody>

    </table>
    <div><%= paginate @customers %></div>
  </div>
</div>