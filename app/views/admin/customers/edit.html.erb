<div class="container">
<h2>会員情報編集</h2>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td>
            <div class="field">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
          </td>

          <td>
            <div class="field">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
          </td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td>
            <div class="field">
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            </div>
          </td>

          <td>
            <div class="field">
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
          </td>
        </tr>

        <tr>
            <th>郵便番号(ハイフンなし)</th>
          <td>
             <div class="field">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
              </div>
          </td>
        </tr>

        <tr>
          <th>住所</th>
          <td>
              <div class="field">
              <%= f.text_field :address, autofocus: true%>
            </div>
          </td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td>
            <div class="field">
              <%= f.text_field :telephone_number, autofocus: true%>
            </div>
          </td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </td>
        </tr>

        <tr>
          <th>会員ステータス</th>

          <td>
            <div>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, '有効', value: false %>
            </div>

            <div>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, '退会', value: true %>
            </div>
          </div>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="actions">
      <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>