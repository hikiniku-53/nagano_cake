<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1、maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-light navbar-light w-100">
        <div class="container">
          <a class="navbar-brand" href="/">Nagano Cake</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

              <% if customer_signed_in? %>

              <% else %>
                <% if customer_signed_in? %>

                <% else %>
                <li class="nav-link p-8px">
                  <%= link_to "About", about_path, class: 'd-flex align-items-center text-light text-decoration-none' %>
                </li>

                <li class="nav-link p-8px">
                  <%= link_to "商品一覧", items_path, class: 'd-flex align-items-center text-light text-decoration-none' %>
                </li>

                <li class="nav-link p-8px">
                  <%= link_to "新規登録", new_customer_registration_path, class: 'd-flex align-items-center text-light text-decoration-none' %>
                </li>

                <li class="nav-link p-8px">
                  <%= link_to "ログイン", new_customer_session_path, class: 'd-flex align-items-center text-light text-decoration-none' %>
                </li>

                <% end %>
              <% end %>
            </ul>
          </div>

        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
